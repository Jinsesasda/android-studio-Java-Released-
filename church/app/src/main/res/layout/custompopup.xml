<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testapll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:baselineAligned="true"
    android:gravity="center"


    android:orientation="vertical"
    android:padding="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/tex"
        android:layout_width="253dp"
        android:layout_height="433dp"

        android:background="@drawable/popupdesign"
        android:orientation="vertical">

        <TextView
            android:id="@+id/closepop"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:background="@drawable/circledrawable"
            android:gravity="center"
            android:text="X"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/testtext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:scrollbarSize="20dp"
            android:text="교회 학교"
            android:textColor="#2196F3"
            android:textSize="35dp"></TextView>


        <TextView
            android:id="@+id/testview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="영아부/유치부"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/testtext4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="유년부"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/testtext5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="초등부"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/testtext6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="중등부"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/testtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="고등부"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/testtext8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="청년부"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/testtext9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="부부전도회"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

        <TextView
            android:id="@+id/hiel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:scrollbarSize="20dp"
            android:text="히엘"
            android:textColor="@color/black"
            android:textSize="28dp"></TextView>

    </LinearLayout>
</LinearLayout>